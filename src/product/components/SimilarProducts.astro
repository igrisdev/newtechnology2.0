---
import type { ProductData } from '@/env'

import './styles.css'

const { products } = Astro.props as { products: ProductData }
---

<div class="flex flex-col gap-12 py-10">
  <h2 class="text-2xl font-semibold">Productos Similares</h2>

  <div id={`${products?.length < 2 ? 'two-products' : 'products'}`}>
    {
      products?.length == 0 && (
        <p class="text-center text-local_text">No hay productos disponibles</p>
      )
    }
    {
      products?.map(({ id, category, image, title, price, descuento }) => {
        return (
          <a href={`/product/${id}`} class="flex group">
            <article class="flex flex-col gap-2">
              <div class="min-h-[400px] max-h-[400px] overflow-hidden relative">
                <div class="absolute w-full h-full group-hover:bg-black opacity-10 z-10 transition-colors duration-200" />
                <img
                  class="w-full h-full object-cover"
                  src={image ? image[0].url : ''}
                  alt={title}
                />
              </div>

              <div class="flex gap-2">
                <div class="flex-1 flex flex-col justify-between">
                  <span class="text-local_text font-medium text-sm">
                    {category}
                  </span>
                  <h2 class="text-lg font-semibold">{title}</h2>
                  <div class="flex gap-2 items-center">
                    {descuento ? (
                      <>
                        <span class="text-xl font-medium text-local_text">
                          <span>{descuento}</span>
                        </span>
                        <span class="text-sm font-medium text-black/45 line-through">
                          {price}
                        </span>
                      </>
                    ) : (
                      <span class="text-xl font-medium text-local_text">
                        {price}
                      </span>
                    )}
                  </div>
                </div>

                <div class="text-red-500" />
              </div>
            </article>
          </a>
        )
      })
    }
  </div>
</div>
