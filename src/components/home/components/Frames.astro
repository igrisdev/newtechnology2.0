---
import GenericContainerCompare from '@/components/general/GenericContainerCompare.astro'
import SectionFrames from './SectionFrames.astro'
---

<section class="flex flex-col gap-12 md:py-10 pt-16 pb-10" id="frames-top">
  <div class="w-full">
    <h2 class="text-2xl sm:text-4xl font-bold text-center !text-local_title">
      Cuadros Personalizados
    </h2>
    <p class="text-center text-local_text text-sm sm:text-lg">
      Encarga tu cuadro personalizado
    </p>
  </div>

  <SectionFrames server:defer>
    <GenericContainerCompare slot="fallback" longitude={6} fig={true} />
  </SectionFrames>

  <SectionFrames />
</section>
