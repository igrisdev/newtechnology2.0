<section
  class="pt-20 sm:pt-0 relative gap-4 lg:gap-0 flex flex-col-reverse justify-center items-center lg:flex-row h-[100vh]"
>
  <div
    class="lg:flex-1 flex flex-col gap-4 items-center lg:items-start justify-center lg:pb-32 max-w-xl"
  >
    <h2
      class="text-3xl lg:text-5xl font-bold text-local_title text-pretty lg:text-left text-center"
    >
      Brindamos las mejores <span class="text-local_accent">reparaciones</span> para
      tus dispositivos.
    </h2>

    <p class="text-local_text lg:text-left text-center text-sm lg:text-base">
      Trae tus dispositivos a nuestra oficina para que podamos repararlos de
      forma rápida y eficiente.
    </p>

    <button
      id="button-contact"
      class="gap-2 bg-local_accent rounded-md px-5 py-2 text-local_text_2 font-semibold flex"
    >
      <p class="text-lg">Contactar</p>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="icon icon-tabler icons-tabler-outline icon-tabler-brand-whatsapp"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M3 21l1.65 -3.8a9 9 0 1 1 3.4 2.9l-5.05 .9"></path><path
          d="M9 10a.5 .5 0 0 0 1 0v-1a.5 .5 0 0 0 -1 0v1a5 5 0 0 0 5 5h1a.5 .5 0 0 0 0 -1h-1a.5 .5 0 0 0 0 1"
        ></path></svg
      >
    </button>
  </div>

  <div class="lg:flex-1">
    <div class="flex items-center justify-center">
      <img
        src="/img2.png"
        alt=""
        class="w-auto h-auto max-h-[450px] sm:max-h-[500px] md:max-h-[600px] lg:max-h-full"
      />
    </div>
  </div>
</section>

<script>
  import { sendMessage } from '@utils/SendMessageWhatsApp'

  const $ = (selector: string) => document.querySelector(selector)

  const buttonContact = $('#button-contact')

  if (buttonContact instanceof HTMLButtonElement) {
    const message = 'Buenas, quiero realizar esta petición desde la web: \n'
    buttonContact.addEventListener('click', () => sendMessage(message))
  }
</script>
