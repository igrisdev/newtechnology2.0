---
import GenericContainerCompare from '@/components/general/GenericContainerCompare.astro'
import ContainerCompare from '@components/home/components/ContainerCompare.astro'
---

<section
  id="fixes"
  class="flex flex-col gap-12 md:py-10 pt-16 pb-10"
  id="frames-top"
>
  <div class="w-full">
    <h2 class="text-2xl sm:text-4xl font-bold text-center !text-local_title">
      Reparaciones y Mejoras
    </h2>
    <p class="text-center text-local_text text-sm sm:text-md">
      El mejor servio de reparaciones y mejoras en Putumayo
    </p>
  </div>

  <ContainerCompare server:defer>
    <GenericContainerCompare slot="fallback" longitude={6} />
  </ContainerCompare>
</section>
