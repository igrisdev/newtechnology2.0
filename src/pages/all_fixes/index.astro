---
import Layout from '@/layouts/LayoutProduct.astro'

import GenericContainerCompare from '@/components/general/GenericContainerCompare.astro'
import ContainerCompare from '@components/home/components/ContainerCompare.astro'
---

<Layout title="Now Technology - Reparaciones y Mejoras">
  <section
    id="fixes"
    class="flex flex-col gap-10 md:py-10 pt-16 pb-10"
    id="frames-top"
  >
    <div class="w-full">
      <h2
        class="text-2xl sm:text-4xl font-bold text-center !text-local_title mt-2"
      >
        Todas las reparaciones y mejoras realizadas
      </h2>
    </div>

    <ContainerCompare server:defer all={true}>
      <GenericContainerCompare slot="fallback" longitude={9} />
    </ContainerCompare>
  </section>
</Layout>
